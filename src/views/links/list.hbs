        <div class="card-body">
           <a href="{{ url }}" target="_blank">
	     <h3 class="card title text-uppercase">
 	        {{ title }} 
	     </h3>
           </a>
	   <p class="m-2">
		{{description}}
	   </p>
	  <p class="m-2">{{timeago created_at}}</p>
	  <a href="/links/delete/{{id}}" class="btn btn-danger"> Delate link</a>
	  <a href="" class="btn btn-secondary"> Edit </a> 
        </div> 


     </div>
    {{/each }} 
  </div>
</div>
